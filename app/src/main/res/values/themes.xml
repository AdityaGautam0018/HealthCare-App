        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/color_065AF3</item>
    </style>
    <style name="Theme.Healthcareapp" parent="Base.Theme.Healthcareapp" >
        <item name="android:actionBarStyle">@style/MyActionBar</item>
